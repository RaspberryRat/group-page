<h1 class="font-bold text-2xl mb-12">Bargaining Team</h1>

<div class="grid grid-cols-3 gap-4 justify-center">
  <% @bargaining_team.order(:first_name).each do |member| %>
    <ul class="bg-gray-50 w-72 p-6 pl-8 border rounded">
      <li class="text-blue-700 hover:scale-125">
        <span class="font-bold"> <%= link_to member.full_name, member_path(member) %></span>
      </li>
      <li>
        <%= image_tag 'missing-profile.png', size: '100x100' %>
      </li>
      <li>
        <span class="italic">Classification: </span>
        <span class="font-bold">  <%= member.classification.name %></span>
      </li>
      <li>
        <span class="italic">Department:</span>
        <span class="font-bold"><%= member.department.name %></span>
      </li>
    </ul>
  <% end %></div>
