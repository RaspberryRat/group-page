<% member = @member %>
<h1 class="mb-12 text-2xl font-bold"><%= member.full_name %>'s details</h1>

<ul class="flex flex-col gap-4">
  <li class="font-bold"><%= member.full_name %></li>
  <li><span class="font-bold">Email:</span> <%= member.email %></li>
  <li><span class="font-bold">Phone number:</span> <%= member.phone_number %></li>
  <li><span class="font-bold">Region:</span> <%= member.region.name %></li>
  <li><span class="font-bold">Department:</span> <%= member.department.name %></li>
  <li><span class="font-bold">Classification:</span> <%= member.classification.name %></li>
  <li><span class="font-bold">Subgroup:</span> <%= member.subgroup.name %></li>
  <li><span class="font-bold">
    Steward:</span>
    <% if member.steward? %>
      Yes
    <% else %>
      No
    <% end %>
  </li>
</ul>