<div class="pl-6 w-4/5"><%= form_with model: post do |form| %>

    <% if post.errors.any? %>
      <div id="error_explanation mb-8">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul class="w-max bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if flash[:error] %>
      <div class="error-message w-max bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
        <%= flash[:error] %>
      </div>
    <% end %>
    <div class="field flex flex-col mb-6">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field mb-6 flex flex-col">
        <%= form.label :date %>
        <%= form.date_field :date, class: 'w-1/5' %>
    </div>

    <div class="field mb-6">
      <%= form.label :content %>
      <%= form.rich_text_area :content %>
    </div>

    <div class="field mb-6">
      <%= form.label :tag_ids, "Tags" %>
      <%= form.collection_check_boxes :tag_ids, @tags, :id, :name do |tag|  %>
        <div>
          <%= tag.check_box %>
          <%= tag.label %>
        </div>
      <% end %>
    </div>

    <div class="field mb-6">
      <%= label_tag :new_tag, "Add New Tag:" %>
      <%= text_field_tag :new_tag, nil, placeholder: "Enter a new tag" %>
    </div>



    <div class="field flex w-max
      p-2 text-white rounded-2xl border-2 border-black
      bg-blue-500 hover:bg-blue-600 active:bg-blue-700
      focus:outline-white focus:ring focus:ring-violet-300">
      <%= form.submit %>
    </div>
  <% end %></div>
