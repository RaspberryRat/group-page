<div class="flex-col"><h1 class="text-4xl font-bold mt-12 p-6">News</h1>

  <div class="pl-6 mb-12">
    <%= link_to "New Post", new_post_path %>
  </div>

  <div class="pl-6 w-3/5">
    <% @posts.each do |post| %>
    <ul class="mb-16 flex flex-col justify-start">
      <li class="flex flex-row justify-between">
        <div class="font-bold text-lg">
          <%= link_to post.title, post %>
        </div>
        <div class="self-end italic text-sm">
          <%= post.created_at.strftime("%B %d, %Y") %>
        </div>
      </li>
      <hr class="w-48 h-px mx-auto my-4 bg-gray-100 border-0 rounded md:my-4 dark:bg-gray-700">
       <li>
        <%= post.content %>
      </li>
    </ul>
      <hr class="h-px my-12 bg-gray-200 border-0 dark:bg-gray-700">
    <% end %>

  </div>
</div>