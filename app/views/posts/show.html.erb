<div class="flex-col">

  <p><%= @post.title %></p>

  <p><%= @post.content %></p>

  <ul>
    <li><%= link_to "Edit Post", edit_post_path(@post) %></li>
    <li>
      <%= link_to "Delete Post", post_path(@post),
        data: { turbo_method: :delete,
                turbo_confirm: "Are you sure you want to delete? This action cannot be undone."}%>
    </li>
  </ul>

</div>