<div class="simple-calendar w-max h-1/4 p-6 text-2xl">
  <div class="calendar-heading text-3xl">
    <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title font-bold">
      <%= t('date.month_names')[start_date.month] %> <%= start_date.year %></time>
    <nav class="text-2xl text-blue-400 flex flex-row justify-between mt-6 mb-6">
      <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view,  class: 'hover:text-blue-300 active:text-blue-600'%>
      <%= link_to t('simple_calendar.today', default: 'Today'), calendar.url_for_today_view, class: 'hover:text-blue-300 active:text-blue-600' %>
      <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view, class: 'hover:text-blue-300 active:text-blue-600'%>
    </nav>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th class="px-4 py-2 border border-gray-700"><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td,
              class: "relative p-16 #{day.month == start_date.month ? 'bg-slate-50' : 'bg-slate-300'}
              border border-gray-700 #{calendar.td_classes_for(day)}" do %>
              <div class="absolute top-0 left-0 p-1 text-sm font-medium">

                <%= day.day %> <!-- Assuming `day` is a Date object -->
              </div>
              <div class="pt-6">
                <% calendar.sorted_events_for(day).each do |event| %>
                  <!-- Example of rendering event details -->
                  <div><%= event.name %></div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
